<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Profolio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="bs-component">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <h3>MayPhoo-Tech</h3>
                    <ul class="navbar-nav ms-md-auto">
                        <li>
                            <a class="nav-link active" href="/Profile/ViewProfile">Profile</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Experience/ViewExperience">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Project/ViewProject">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact/ViewContact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Login/ViewLogin">Admin Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Profolio</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
